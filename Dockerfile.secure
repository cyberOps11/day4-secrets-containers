# ===== STAGE 1 : BUILD =====
FROM node:18-alpine AS builder

# üí£ SABOTAGE POUR TESTER L'ALERTE üí£
# Cette commande force une erreur (exit code 1) imm√©diatement
# RUN exit 1 

LABEL maintainer="security@juice-shop.local"
WORKDIR /app

RUN apk add --no-cache git python3 make g++

# Copier les fichiers de d√©finition des d√©pendances
COPY package.json ./

# Utilisation de npm install car le lockfile est absent
# --omit=dev permet de ne pas installer les outils de test/dev (plus l√©ger)
RUN npm install --only=production --ignore-scripts \
    && npm cache clean --force

# Copier le reste du code source
COPY . .

# Tenter le build (ignor√© si le script build n'existe pas)
RUN npm run build:frontend || true

# ===== STAGE 2 : RUNTIME (image MINIMALE) =====
FROM node:18-alpine
LABEL maintainer="security@juice-shop.local"
LABEL version="1.0"
LABEL description="OWASP Juice Shop - Security Hardened"

WORKDIR /app

# R√©cup√©ration s√©lective des fichiers du stage builder
COPY --from=builder /app/node_modules ./node_modules
COPY --from=builder /app/package.json ./
COPY --from=builder /app ./

# S√©curisation de l'ex√©cution (Non-Root)
RUN addgroup -g 1001 -S nodejs \
    && adduser -S juiceuser -u 1001 \
    && chown -R juiceuser:nodejs /app

USER juiceuser
EXPOSE 3000

# V√©rification de sant√©
HEALTHCHECK --interval=30s --timeout=10s --start-period=40s --retries=3 \
    CMD node healthcheck.js || exit 1

CMD ["npm", "start"]

# Note de s√©curit√©
LABEL security.notes="This image runs as non-root user (juiceuser:1001)."
